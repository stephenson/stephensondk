<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= current_page.data.title || "Niklas Stephenson"%></title>
    <meta name=viewport content="width=device-width, initial-scale=1">
    <% if is_blog_article? %>
      <meta name="description" content="<%= current_page.data.description %>">
      <meta property="og:title" content="<%= current_page.data.title || "Niklas Stephenson"%>"/>
      <meta property="og:site_name" content="Niklas Stephenson"/>
      <meta property="og:url" content="http://www.stephenson.dk<%= current_page.url %>" />
      <meta property="og:description" content="<%= current_page.data.description %>" />
      <meta property="og:type" content="article" />
      <meta property="article:author" content="https://www.facebook.com/niklas.stephenson" />
    <% end %>
  </head>
  
  <body class="<%= page_classes %>">
    <header>
      <div class="title<% if is_blog_article? %> sidebar<% end %>">
        <h1>Niklas Stephenson</h1>
      </div>
      <nav class="<%= current_page.data.nav_class %>">
        <ol class="full">
          <li><a href="/">Home</a></li>
          <li><a href="/blog/">Blog</a></li>
          <li><a href="/adventures/">Adventures</a></li>
          <li><a href="/about/">About</a></li>
        </ol>
        <ol class="small">
          <li><a href="/menu/">Menu</a></li>
        </div>
      </nav>
    </header>
    <%= yield %>
    <%= stylesheet_link_tag "normalize", "all" %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    
      ga('create', 'UA-43333192-1', 'stephenson.dk');
      ga('send', 'pageview');
    
    </script>
  </body>
</html>