<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= current_page.data.title || ""%>Niklas Stephenson</title>
    <meta name=viewport content="width=device-width, initial-scale=1">
    <% css_path = sitemap.resources.select { |p| p.source_file.match(/all[.]scss$/) }.first %>
    <style>
      <%= css_path.render %>
    </style>
  </head>
  
  <body class="<%= page_classes %>">
    <header>
      <div class="title">
        <h1>Niklas Stephenson</h1>
      </div>
      <nav class="<%= current_page.data.nav_class %>">
        <ol>
          <li><a href="/">Home</a></li>
          <li><a href="/blog/">Blog</a></li>
          <li><a href="/adventures/">Adventures</a></li>
          <li><a href="/about/">About</a></li>
        </ol>
      </nav>
    </header>
    <%= yield %>
    <%= stylesheet_link_tag "normalize" %>
  </body>
</html>