layout: "blog"
nav_class: "sidebar"
---

<% blog("adventures").articles[0...5].each do |article| %>
  <article>
    <h1><a href="<%= article.url %>"><%= article.title %></a></h1>
    <time>Published on <%= article.date.strftime('%b %e %Y') %></time>
    
    <%= article.summary %>
    
    <a href="<%= article.url %>" class="read-more">Read more...</a>
  </article>
<% end %>